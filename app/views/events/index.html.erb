<div class="index-wrapper">
  <div class="index">
    
    <div class="content-container">
      <h2>Upcoming Events</h2>
      <div class="events-container">
        <% @events.upcoming.each do |event| %>
          <div class="event">
            <h4><%= event.name %></h4>
            <p><%= event.location %></p>
            <p><%= event.start_time %></p>
            <p><%= event.end_time %></p>
            <%= link_to "Details", event %>
            <%= button_to "Join", user_event_path(event), method: :put %>
            <%= button_to "Leave", user_event_path(event), method: :delete %>
          </div>
        <% end %>
      </div>
    </div>

    <h2>Past Events</h2>
    <div class="content-container">
      <div class="events-container">
        <% @events.past.each do |event| %>
          <div class="event">
            <h4><%= event.name %></h4>
            <p><%= event.location %></p>
            <p><%= event.start_time %></p>
            <p><%= event.end_time %></p>
            <%= link_to "Details", event %>
            <%= button_to "Join", user_event_path(event), method: :put %>
            <%= button_to "Leave", user_event_path(event), method: :delete %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>